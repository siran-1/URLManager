<!-- This HTML code is for a login and account creation page

The body has two main sections:
The first section displays an image and a form for creating a new account, 
including fields for username and password, and a 'Create' button.
The second section is for existing users to log in, with a similar form but a 'Login' button.-->

<%-include('partials/header')-%>
<body>
  <div class="container login-container">
    <div class="body d-md-flex align-items-center justify-content-between">
      <div class="box-1 mt-md-0 mt-5">
        <img src="/images/loginbg.jpg" class="" alt="" />
      </div>
      <div class="box-2 h-100" id="newaccountcreationDiv">
        <div class="mt-5">
          <p class="mb-1 h-1">Create Account.</p>
          <p class="text-muted mb-2">
            Capture Your Thoughts, Unleash Your Potential - Note Every Moment!
          </p>
          <div class="d-flex flex-column">
            <form method="POST" action="/login/new">
              <div class="d-flex-column align-items-center">
                <div class="mt-2">
                  <label for="newUsername" class="form-label">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    name="newUsername"
                    placeholder="Enter Username"
                    id="newUsername"
                  />
                </div>
                <div class="mt-2">
                  <label for="newPassword" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    name="newPassword"
                    placeholder="Enter password"
                    id="newPassword"
                  />
                </div>
                <div class="mt-2">
                  <button
                    class="btn btn-success btn-block"
                    type="submit"
                    id="newaccountcreationBtn"
                  >
                    Create
                  </button>
                </div>
              </div>
              <div class="mt-3">
                <p class="mb-0 text-muted">Already have an account?</p>
                <div class="btn btn-primary" id="existingloginbtn">
                  Log in<span class="fas fa-chevron-right ms-1"></span>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="box-2 h-100" id="oldaccountloginDiv">
        <div class="mt-5">
          <p class="mb-1 h-1">Login Account.</p>
          <p class="text-muted mb-2">
            Capture Your Thoughts, Unleash Your Potential - Note Every Moment!
          </p>
          <div class="d-flex flex-column">
            <form method="POST" action="/login">
              <div class="d-flex-column align-items-center">
                <div class="mt-2">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    name="username"
                    placeholder="Enter Username"
                    id="username"
                  />
                </div>
                <div class="mt-2">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                    placeholder="Enter password"
                    id="password"
                  />
                </div>
                <div class="mt-2">
                  <button
                    class="btn btn-success btn-block"
                    type="submit"
                    id="oldaccountloginBtn"
                  >
                    Login
                  </button>
                </div>
              </div>
              <div class="mt-3">
                <p class="mb-0 text-muted">Don't have an account?</p>
                <div class="btn btn-primary" id="newloginbtn">
                  Create account<span class="fas fa-chevron-right ms-1"></span>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<script>
  // login || account creation switch
  document.getElementById("existingloginbtn").addEventListener("click", () => {
    document.getElementById("newaccountcreationDiv").style.display = "none";
    document.getElementById("oldaccountloginDiv").style.display = "flex";
  });
  document.getElementById("newloginbtn").addEventListener("click", () => {
    document.getElementById("newaccountcreationDiv").style.display = "flex";
    document.getElementById("oldaccountloginDiv").style.display = "none";
  });
</script>
<%-include('partials/footer')-%>
